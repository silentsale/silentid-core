{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "_SECURITY_NOTE": "All secrets MUST come from environment variables or Azure Key Vault. See EXTERNAL_SERVICES.md for configuration guide.",

  "SilentId": {
    "Environment": "Development",
    "ApiVersion": "v1",
    "ApplicationName": "SilentID API"
  },
  "Jwt": {
    "_SecretKey": "SET VIA ENVIRONMENT: Jwt__SecretKey (min 32 chars, use cryptographically random)",
    "Issuer": "silentid-api",
    "Audience": "silentid-app",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "Stripe": {
    "_SecretKey": "SET VIA ENVIRONMENT: Stripe__SecretKey",
    "_WebhookSecret": "SET VIA ENVIRONMENT: Stripe__WebhookSecret",
    "PremiumPriceId": "SET VIA ENVIRONMENT: Stripe__PremiumPriceId",
    "ProPriceId": "SET VIA ENVIRONMENT: Stripe__ProPriceId"
  },
  "AzureStorage": {
    "_ConnectionString": "SET VIA ENVIRONMENT: AzureStorage__ConnectionString",
    "EvidenceContainer": "evidence"
  },
  "ExternalServices": {
    "AzureComputerVision": {
      "_Endpoint": "SET VIA ENVIRONMENT: ExternalServices__AzureComputerVision__Endpoint",
      "_ApiKey": "SET VIA ENVIRONMENT: ExternalServices__AzureComputerVision__ApiKey",
      "ModelVersion": "2024-02-01",
      "Description": "Azure Computer Vision OCR for profile screenshot extraction (Section 49.6)"
    },
    "EbayApi": {
      "_ClientId": "SET VIA ENVIRONMENT: ExternalServices__EbayApi__ClientId",
      "_ClientSecret": "SET VIA ENVIRONMENT: ExternalServices__EbayApi__ClientSecret",
      "Environment": "sandbox",
      "Description": "eBay Commerce API for verified seller data extraction (Section 49.11)"
    },
    "PlaywrightService": {
      "_BaseUrl": "SET VIA ENVIRONMENT: ExternalServices__PlaywrightService__BaseUrl",
      "Enabled": false,
      "Description": "Headless browser service for automated screenshot capture (Section 49.6)"
    }
  }
}
